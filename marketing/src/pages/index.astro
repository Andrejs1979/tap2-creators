		.waitlist-form {
			flex-direction: column;
		}

		.features-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

<script>
	const form = document.getElementById('waitlist-form') as HTMLFormElement;
	const messageEl = document.getElementById('form-message')!;

	form?.addEventListener('submit', async (e) => {
		e.preventDefault();

		const formData = new FormData(form);
		const email = formData.get('email') as string;

		const submitBtn = form.querySelector('button') as HTMLButtonElement;
		submitBtn.disabled = true;
		submitBtn.textContent = 'Joining...';

		messageEl.textContent = '';
		messageEl.className = 'form-message';

		try {
			const response = await fetch('https://api.claude-remote.com/api/waitlist', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json',
				},
				body: JSON.stringify({
					email,
					projectRepo: 'github.com/Andrejs1979/tap2-creators',
				}),
			});

			if (response.ok) {
				messageEl.textContent = 'ğŸ‰ You\'re on the list! We\'ll be in touch soon.';
				messageEl.classList.add('success');
				form.reset();
			} else {
				const error = await response.json().catch(() => ({ message: 'Unknown error' }));
				messageEl.textContent = `Oops! ${error.message || 'Something went wrong.'} Please try again.`;
				messageEl.classList.add('error');
			}
		} catch {
			messageEl.textContent = 'Network error. Please check your connection and try again.';
			messageEl.classList.add('error');
		} finally {
			submitBtn.disabled = false;
			submitBtn.textContent = 'Join Waitlist';
		}
	});
</script>
